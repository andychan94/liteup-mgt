{% extends 'dashboard/base.html.twig' %}

{% block body %}
    <nav class="breadcrumb has-arrow-separator is-small" aria-label="breadcrumbs">
        <ul>
            <li><a href="{{ path('dashboard_home') }}">{{ 'home'|trans }}</a></li>
            <li><a href="{{ path('states_index') }}">{{ 'state.title'|trans }}</a></li>
            <li class="is-active"><a href="#" aria-current="page">{{ 'add'|trans }}</a></li>
        </ul>
    </nav>

    <div class="level">
        <div class="level-left">
            <div class="level-item">
                <div class="title">
                    {{ 'add'|trans~' a '~'state.name'|trans }}
                </div>
            </div>
        </div>
    </div>

    <div class="columns is-mobile">
        <div class="column is-full-mobile is-two-thirds-tablet is-half-desktop is-one-third-widescreen is-one-quarter-fullhd">

            {{ form_start(form, {'method': 'post', 'action': path('states_add_single')}) }}
            {% form_theme form ':dashboard/form:custom_form.html.twig' %}
            <div class="field">
                <label class="label">{{ form_label(form.name) }}</label>
                <div class="control">
                    {{ form_widget(form.name) }}
                </div>
                <p class="help is-danger">{{ form_errors(form.name) }}</p>
            </div>
            {{ form_rest(form) }}
            <input class="button is-primary" type="submit" id="_submit" name="_submit" value="{{ 'add'|trans }}"/>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}