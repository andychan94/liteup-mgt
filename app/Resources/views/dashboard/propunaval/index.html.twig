{% extends 'dashboard/base.html.twig' %}

{% block body %}
    <nav class="breadcrumb is-small" aria-label="breadcrumbs">
        <ul>
            <li><a href="{{ path('dashboard_home') }}">{{ 'home'|trans }}</a></li>
            <li class="is-active"><a href="#" aria-current="page">{{ (entityAltName~'.title')|trans }}</a></li>
        </ul>
    </nav>
    <div class="level">
        <div class="level-left">
            <div class="level-item">
                <div class="title">
                    {{ (entityAltName~'.title')|trans }}
                </div>
            </div>
        </div>
    </div>
    <div class="block">
        <div class="has-text-left">{{ 'total_entities'|trans({'%entity%': (entityAltName~'.plural')|trans,'%count%': pagination.getTotalItemCount}) }}
            <label for="limit">{{ 'show'|trans }}
                <span class="select is-small">
                    <select name="limit" id="limit">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="150">150</option>
                        <option value="200">200</option>
                        <option value="500">500</option>
                        <option value="1000">1000</option>
                    </select>
                </span>
                {{ 'per_page'|trans }}
            </label>
        </div>
    </div>
    {% set heading %}
        <th class="has-text-right"><label>
                <input type="checkbox" class="check_all">
            </label></th>
        <th>ID</th>
        <th>Main photo</th>
        <th>Details</th>
        <th>{{ 'state.name'|trans }}</th>
        <th>{{ 'lga.name'|trans }}</th>
        <th>Status</th>
        <th>{{ 'h_actions'|trans }}</th>
    {% endset %}
    <form action="{{ path(entityAltName~'_enable_many') }}" method="post">
        <div class="table-container">
            <table class="table is-striped is-narrow is-hoverable is-fullwidth table-container">
                <thead>
                <tr>
                    {{ heading }}
                </tr>
                </thead>
                <tfoot>
                <tr>
                    {{ heading }}
                </tr>
                </tfoot>
                <tbody>

                {% for house in pagination %}
                    {% set stateName = (house.area is not empty)? house.area.lga.state.name: house.lga.state.name %}
                    {% set lgaName = (house.area is not empty)? house.area.lga.name: house.lga.name %}
                    {% set areaName = (house.area is not empty)? house.area.name~", ": "" %}
                    <tr>
                        <td class="has-text-right">
                            <label>
                                <input class="checkbox" name="{{ entityAltNamePlu }}[]" type="checkbox"
                                       value="{{ house.id }}">
                            </label></td>
                        <td>{{ house.id }}</td>
                        <td class="list-house-thumbnail">
                            <figure class="has-text-centered">
                                <img src={% if house.photos is not empty %}"{{ uploads_folder }}{{ house.photos | first.path }}"
                                        {% else %}
                                            {{ asset('images/placesholder.jpg') }}
                                        {% endif %}
                                /></figure>
                            <div class="has-text-centered">
                                <a class="button is-success" href="{{ path('photo_index', {'id': house.id}) }}"><span>Manage
                                        Photos</span></a>
                            </div>
                        </td>
                        <td>
                            <p>{{ house.title }}</p>
                            <p>
                                <span class="icon is-small">
                                    <i class="fas fa-map-marker-alt"></i>
                                </span>
                                {{ stateName }}, {{ lgaName }}, {{ areaName }}{{ house.address }}
                            </p>
                            <p>{{ currency|raw }}{{ house.price }}</p>

                        </td>
                        <td>
                            {{ stateName }}
                        </td>
                        <td>
                            {{ lgaName }}
                        </td>
                        <td>
                            {#TODO view count#}
                            <span class="tag is-primary"><span class="icon"><i
                                            class="fas fa-eye"></i></span>0 views</span>
                            <span class="tag is-success"><span class="icon"><i
                                            class="fas fa-calendar"></i></span>{{ house.createdAt|date("d F, Y") }}
                            </span>
                            {% if house.available == 0 %}<span class="tag is-danger"><span class="icon"><i
                                            class="fas fa-ban"></i></span>Unavailable</span>{% endif %}
                        </td>
                        <td>
                            <a class="button is-info tooltip is-tooltip-bottom"
                               data-tooltip="Edit the property"
                               href="{{ path(entityAltName~'_edit', {"id":house.id}) }}">
                                <span class="icon">
                                    <i class="fas fa-edit"></i>
                                </span>
                            </a>
                            <a class="button is-success tooltip is-tooltip-bottom"
                               data-tooltip="Make the property available"
                               href="{{ path(entityAltName~'_enable', {"id":house.id}) }}">
                                <span class="icon">
                                    <i class="fas fa-check"></i>
                                </span>
                            </a>
                            {#<a class="button is-dark tooltip is-tooltip-bottom"
                               data-tooltip="Move the property to Properties for sale"
                               href="{{ path(entityAltName~'_move', {"id":house.id}) }}">
                                <span class="icon">
                                    <i class="fas fas fa-hand-holding-usd"></i>
                                </span>
                            </a>#}

                            <a class="button is-danger tooltip is-tooltip-bottom"
                               data-tooltip="Delete the property"
                               href="{{ path(entityAltName~'_delete', {"id":house.id}) }}">
                                <span class="icon">
                                    <i class="fas fa-trash"></i>
                                </span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="buttons">
            {{ 'with_selected'|trans }}
            <button class="button is-success is-small" type="submit">
                <span class="icon is-small">
                    <i class="fas fa-check"></i>
                </span>
                <span>{{ 'b_available'|trans }}</span>
            </button>
        </div>
    </form>

    <div class="block">
        <nav class="pagination is-rounded" role="navigation" aria-label="pagination">
            {{ knp_pagination_render(pagination) }}
        </nav>
    </div>
    <div class="block"></div>
{% endblock %}
