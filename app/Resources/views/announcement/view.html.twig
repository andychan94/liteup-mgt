{% extends 'base.html.twig' %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('homepage') }}">
                    <img src="{{ asset('images/liteup-logo.png') }}" width="80" alt="LiteUp">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#houses" aria-controls="navbarsExample07" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="houses">
                    <ul class="navbar-nav ml-auto justify-content-end">
                        <li class="nav-item active">
                            <a class="nav-link m-nav-link" href="{{ path('homepage') }}">Home<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link m-nav-link" href="{{ path('blog_list_page') }}">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link m-nav-link" href="{{ path('about_page') }}">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link m-nav-link" href="{{ path('contact_page') }}">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="section-padding">
        <div class="container">
            <div class="product-info row">
                <div class="col-lg-7 col-md-7 col-xs-12">
                    <div class="details-box ads-details-wrapper">
                        <div id="owl-demo" class="owl-carousel owl-theme owl-loaded">
                            <div class="owl-stage-outer">
                                <div class="owl-stage">
                                    {% for photo in house.photos %}
                                        <div class="owl-item">
                                            <img src="{{ asset('images/uploads/') }}{{ photo.path }}" width="100%" alt="The Last of us">
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="description mt-3">
                            <h4>Description</h4>
                            <p>
                                {{ house.description }}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-xs-12">
                    <div class="details-box">
                        <div class="ads-details-info">
                            <h2>{{ house.title }}</h2>
                            <div class="details-meta">
                                <span><a href="#"><i class="fa fa-map-marker fa-fw"></i>{{ house.address }}</a></span>
                                <span><a href="#"><i class="fa fa-eye fa-fw"></i>299 View</a></span>
                            </div>
                            <h4 class="title-small mb-3">Feature:</h4>
                            <ul class="list-specification">
                                {% for feature in house.features %}
                                    <li><i class="fa fa-star fa-fw" aria-hidden="true"></i>{{ feature.name }}</li>
                                {% endfor %}

                            </ul>
                        </div>
                        <div class="short-info">
                            <h4>Rooms Count</h4>
                            <ul class="list-room">
                                <li><i class="fa fa-star fa-fw" aria-hidden="true"></i>
                                    Number of bedrooms {{ house.bedrooms }}
                                </li>
                                <li><i class="fa fa-star fa-fw" aria-hidden="true"></i>
                                    Number of bathrooms {{ house.bathrooms }}

                                </li>
                                <li><i class="fa fa-star fa-fw" aria-hidden="true"></i>
                                    Number of toilets {{ house.toilets }}
                                </li>
                            </ul>
                        </div>
                        <div class="short-info">
                            <h4>Area Type</h4>
                            <ul class="list-room">
                                <li><i class="fa fa-star fa-fw" aria-hidden="true"></i>
                                   {{ house.kind }}
                                </li>

                            </ul>
                        </div>
                        <div class="mb-4">
                            <a class="contact-request" data-toggle="modal" data-target="#notificationModal">Contact</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header p-1">
                    {#<h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>#}
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                   Please download Liteup app
                    Available Apps and play make
                </div>
            </div>
        </div>
    </div>

{% endblock %}