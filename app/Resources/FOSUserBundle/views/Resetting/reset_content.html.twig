{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row align-items-center">
        <div class="col-md-7">
            <div class="left-side">
                <div class="logo-content">
                    <a href="{{ path('homepage') }}">
                        <img src="{{ asset('images/bg-image/logo-white.png') }}" class="logo" alt="Liteup">
                    </a>
                </div>
                <div class="register-text-content">
                    <h3 class="register-text-title-1">Hello!</h3>
                    <h2 class="register-text-title-2">Welcome</h2>
                    <h3 class="register-text-title-1">to Liteup</h3>

                    <p class="register-text">
                        Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever
                        since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="register-form">
                <div class="round">
                    <i class="fa fa-2x fa-user"></i>
                </div>
                <h2 class="c-a">Resetting Password</h2>
                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                <div class="form-group">
                    {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'form-control  r-form-field','placeholder':'New password'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control  r-form-field','placeholder':'Repeat new password'}}) }}
                </div>

                <div>
                    <input class="btn-lg reg-btn is-success" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                </div>
                {{ form_end(form) }}
                <p style="margin-top: 30px;">
                    <a href="{{ path('fos_user_security_login') }}"  class="text-white" style="text-decoration: underline;">Log in</a> &nbsp;Â·&nbsp;
                    <a href="{{ path('fos_user_registration_register') }}" class="text-white" style="text-decoration: underline;">Register</a>
                </p>
            </div>
        </div>
    </div>
</div>



