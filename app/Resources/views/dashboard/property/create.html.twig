            <div class="step">
                <h3>Location</h3>
                <section>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label for="stateSelect" class="required">Street</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
