{% extends 'dashboard/base.html.twig' %}

{% block body %}
    <section class="section notification">
        <form action="{{ path('verify_confirm_request') }}" method="post" autocomplete="off" enctype="multipart/form-data">
            <div class="column">
                <h6 class="is-size-5 has-text-info">You can choose what 1 â€“ {{ verifyConditions| length }} document to use
                    for verification and then upload that document. </h6><br>
                {% set count = 0 %}
                {% for vf in verifyConditions %}
                    {% set count = count + 1 %}
                    <div>
                        <span>{{ count }}.</span>
                        <input {{ (count == 1)? 'checked' :'' }} type="radio" value="{{ vf.id }}" id="{{ count }}" name="verifyCondition" required>
                        <label for="{{ count }}" class="has-text-grey-darker">{{ vf.verificationConditionText }}
                        </label>
                    </div>

                {% endfor %}
            </div>

            <div class="column">
                <div class="field">
                    <div class="file is-boxed has-name">
                        <label class="file-label">
                            <input class="file-input" type="file" name="document" required>
                            <span class="file-cta">
                                <span class="file-icon">
                                  <i class="fas fa-upload"></i>
                                </span>
                                   <span class="file-label">
                                   Upload Document
                                 </span>
                  </span>
                                        <span class="file-name">
                    Screen Shot 2017-07-29 at 15.54.25.png
                  </span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="column">
                <button type="submit" class="button is-success is-size-5">
                <span class="icon is-small">
                  <i class="fas fa-check"></i>
                </span>
                    <span>Confirm</span>
                </button>
            </div>

        </form>
    </section>
{% endblock %}