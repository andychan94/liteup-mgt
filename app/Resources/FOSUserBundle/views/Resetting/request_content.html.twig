    <div class="field">
        <p class="control has-icons-left">
            <input class="input" type="text" id="username" name="username" required="required" placeholder="{{ 'resetting.request.username'|trans }}" />
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
