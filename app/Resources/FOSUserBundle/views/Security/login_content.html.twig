{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row align-items-center">
        <div class="col-md-7">
            <div class="left-side">
                <div class="logo-content">
                    <a href="{{ path('homepage') }}">
                        <img src="{{ asset('images/bg-image/logo-white.png') }}" class="logo" alt="Liteup">
                    </a>
                </div>
                <div class="register-text-content">
                    <h3 class="register-text-title-1">Hello!</h3>
                    <h2 class="register-text-title-2">Welcome</h2>
                    <h3 class="register-text-title-1">to Liteup</h3>

                    <p class="register-text">
                        Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever
                        since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="register-form">
                <div class="round">
                    <i class="fa fa-2x fa-user"></i>
                </div>
                <h2 class="c-a">Sign In</h2>
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                    </div>
                {% endif %}
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="field form-group">
                            <input  class="input form-control r-form-field" type="text" placeholder="Email" autofocus="" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                    </div>

                    <div class="field form-group">
                            <input class="input form-control r-form-field" type="password" placeholder="Password" id="password" name="_password" required="required" autocomplete="current-password" />
                    </div>

                    <div class="field form-group">
                        <div class="control">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label class="checkbox text-white" style="text-decoration: underline;" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                    </div>
                    {#<input type="hidden" name="_failure_path" value="{{ path('fos_user_resetting_request') }}" />#}
                    <input class="liteup-login-btn btn-lg reg-btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

                </form>
                <p class="is-small " style="margin-top: 30px;">
                    <a href="{{ path('fos_user_registration_register') }}" class="text-white" style="text-decoration: underline;">Register</a> &nbsp;·&nbsp;
                    <a href="{{ path('fos_user_resetting_request') }}"  class="text-white" style="text-decoration: underline;">Forgot Password</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="register-footer">
    <div class="container">
        <p class="footer-text">Don't have an account <a href="{{ path('fos_user_registration_register') }}" class="footer-sign-in">Register</a></p>
    </div>
</div>





